<%- include('header') -%>
<div class="connexion"></div>
<main class="container connect">
    <article >
        <h1>Bienvenue au Brasil em livros</h1>
        <form method="post" class="form_connexion">
            <fieldset>
                <legend>Connexion</legend>
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" class="input-error" placeholder="E-mail">
                <% if(locals.messageEmail) { %>
                    <p class="message_error"><%= messageEmail%></p>
                <% } %>
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="input-error" placeholder="Veuillez enregistrer 8 caractÃ¨res">
                <% if(locals.messagePassword) { %>
                    <p class="message_error"><%= messagePassword%></p>
                <% } %>
                <button type="submit">Connexion</button>
                <% if(locals.message) { %>
                    <p class="message_error"><%= message %></p>
                <% } %>
            </fieldset>
        </form>
    </article>
</main>
<script src="/javascript/formulaire.js"></script>
<%- include('footer') -%>